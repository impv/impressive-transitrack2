generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

// TODO: 交通費申請の実装時にexpenseモデルを追加する
model Member {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
